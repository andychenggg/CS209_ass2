<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane prefHeight="250" prefWidth="350.0"
          xmlns="http://javafx.com/javafx/8.0.171"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="cn.edu.sustech.cs209.chatting.client.WrongMessageController"
          id="gridPane" BorderPane.alignment="CENTER" stylesheets="@styles/WrongInfoStyles.css">
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="370.0" minWidth="320.0"
                           prefWidth="350.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="150.0" minHeight="10.0" prefHeight="130.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="250.0" minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <StackPane prefWidth="350.0" prefHeight="150.0" GridPane.rowIndex="0">
        <Label id="WrongLabel" stylesheets="@styles/WrongInfoStyles.css"
               prefWidth="100.0" prefHeight="140.0"/>
    </StackPane>

    <GridPane prefWidth="350.0" prefHeight="100.0" GridPane.rowIndex="1">
        <columnConstraints>
            <ColumnConstraints prefWidth="25.0"/>
            <ColumnConstraints maxWidth="370.0" minWidth="220.0" prefWidth="300.0"/>
            <ColumnConstraints prefWidth="25.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="150.0" minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Label fx:id="WrongTextLabel" wrapText="true" id="WrongTextLabel" stylesheets="@styles/WrongInfoStyles.css" GridPane.columnIndex="1"/>
    </GridPane>
</GridPane>
